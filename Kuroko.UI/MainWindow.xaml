<Window x:Class="Kuroko.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kuroko.UI"
        mc:Ignorable="d"
        Title="Kuroko" Height="650" Width="450"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        Topmost="True"
        ResizeMode="CanResizeWithGrip">

    <Window.Resources>
        <!-- Brutalist Button Style -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#666"/>
            <Setter Property="BorderBrush" Value="#333"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#333"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="White"/>
                                <Setter Property="Foreground" Value="Black"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Main Glass Container -->
    <Border Background="#DD080808" 
            BorderBrush="#333" 
            BorderThickness="1" 
            CornerRadius="12">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <!-- Header -->
                <RowDefinition Height="*"/>
                <!-- Content -->
                <RowDefinition Height="50"/>
                <!-- Footer -->
            </Grid.RowDefinitions>

            <!-- 1. Header (Draggable) -->
            <Border Grid.Row="0" Background="Transparent" MouseDown="Header_MouseDown">
                <Grid Margin="15,0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Border Width="10" Height="10" Background="#00FF41" CornerRadius="5" Margin="0,0,10,0">
                            <Border.Effect>
                                <DropShadowEffect Color="#00FF41" BlurRadius="8" ShadowDepth="0" Opacity="0.8"/>
                            </Border.Effect>
                        </Border>
                        <TextBlock Text="KUROKO // SYSTEM" 
                                   Foreground="#888" 
                                   FontFamily="Consolas" 
                                   FontWeight="Bold"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <TextBlock x:Name="StatusText" Text="OFFLINE" Foreground="#444" FontFamily="Consolas" FontSize="10" VerticalAlignment="Center" Margin="0,0,15,0"/>
                        <Button Content="✕" BorderThickness="0" Foreground="#666" Click="ExitButton_Click" Padding="5,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- 2. Main Content Area -->
            <Grid Grid.Row="1" Margin="15,0,15,10">

                <!-- Live Transcript (Bottom Layer) -->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="LIVE FEED" Foreground="#333" FontFamily="Consolas" FontSize="10" Margin="0,0,0,5"/>

                    <ScrollViewer Grid.Row="1" x:Name="TranscriptScroller" VerticalScrollBarVisibility="Hidden">
                        <TextBlock x:Name="TranscriptText" 
                                   Text="System ready. Waiting for input..." 
                                   Foreground="#555" 
                                   FontFamily="Consolas" 
                                   FontSize="12" 
                                   LineHeight="18"
                                   TextWrapping="Wrap"/>
                    </ScrollViewer>
                </Grid>

                <!-- AI Response Overlay (Top Layer - The Glass Card) -->
                <Border x:Name="AiResponseOverlay" 
                        Visibility="Collapsed" 
                        Background="#F2111111" 
                        BorderBrush="#00FF41" 
                        BorderThickness="1" 
                        CornerRadius="8"
                        Padding="15"
                        VerticalAlignment="Top"
                        MaxHeight="450">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="5" Opacity="0.5"/>
                    </Border.Effect>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- AI Header -->
                        <Grid Grid.Row="0" Margin="0,0,0,15">
                            <TextBlock Text="GENERATED INSIGHT" Foreground="#00FF41" FontFamily="Consolas" FontWeight="Bold"/>
                            <Button Content="DISMISS [ESC]" 
                                    HorizontalAlignment="Right" 
                                    BorderThickness="0" 
                                    Foreground="#666" 
                                    FontSize="10" 
                                    Click="DismissAi_Click"/>
                        </Grid>

                        <!-- Markdown Content Renderer -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden">
                            <StackPanel x:Name="MarkdownContainer"/>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>

            <!-- 3. Footer Controls -->
            <Border Grid.Row="2" BorderBrush="#222" BorderThickness="0,1,0,0" Margin="15,0">
                <Grid VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal" Grid.Column="0">
                        <!-- Toggle Start/Stop -->
                        <Button x:Name="BtnStart" Content="INITIALIZE" Click="BtnStart_Click" Margin="0,0,5,0"/>

                        <!-- Context Management -->
                        <Button x:Name="BtnClearCtx" Content="CLR CTX" Click="BtnClearContext_Click" Margin="0,0,5,0" ToolTip="Reset AI Memory"/>

                        <!-- RAG Controls -->
                        <Button x:Name="BtnIngest" Content="PDF" Click="BtnIngest_Click" Margin="0,0,5,0" ToolTip="Upload Resume"/>
                        <Button x:Name="BtnResetRag" Content="RESET DB" Click="BtnResetRag_Click" Margin="0,0,5,0" FontSize="9" BorderBrush="#442222" Foreground="#886666" ToolTip="Clear RAG Database"/>
                    </StackPanel>

                    <Button x:Name="BtnDebug" Grid.Column="1" Content="REC DEBUG" Click="BtnDebug_Click" BorderBrush="#442222" Foreground="#884444"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>