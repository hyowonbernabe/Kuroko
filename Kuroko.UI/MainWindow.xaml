<Window x:Class="Kuroko.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kuroko.UI"
        mc:Ignorable="d"
        Title="Kuroko" Height="450" Width="800"
        Background="#1E1E1E"
        Topmost="True"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip">
    <Grid>
        <Border BorderBrush="#00FF00" BorderThickness="2" CornerRadius="5">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Kuroko Stealth Mode" 
                           Foreground="White" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Visible to you. Invisible to OBS/Zoom." 
                           Foreground="#AAAAAA" 
                           FontSize="14" 
                           HorizontalAlignment="Center" 
                           Margin="0,10,0,0"/>
                <Button Content="Exit App" 
                        Width="100" 
                        Height="30" 
                        Margin="0,20,0,0"
                        Click="ExitButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>