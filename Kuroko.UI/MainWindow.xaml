<Window x:Class="Kuroko.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kuroko.UI"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Kuroko" Height="600" Width="400"
        Background="#1E1E1E"
        Topmost="True"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip">

    <Border BorderBrush="#333333" BorderThickness="1" CornerRadius="5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="#252525" CornerRadius="5,5,0,0" MouseDown="Header_MouseDown">
                <Grid Margin="10">
                    <TextBlock Text="Kuroko // Live Monitor" Foreground="#00FF00" FontWeight="Bold" VerticalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <TextBlock x:Name="StatusText" Text="Idle" Foreground="#666666" FontSize="10" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <Button Content="X" Width="20" Height="20" Padding="0" Background="Transparent" BorderBrush="Transparent" Foreground="#666666" Click="ExitButton_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Content Area -->
            <Grid Grid.Row="1">
                <!-- Layer 1: Transcript Feed -->
                <ScrollViewer x:Name="TranscriptScroller" Margin="10" VerticalScrollBarVisibility="Hidden">
                    <TextBlock x:Name="TranscriptText" 
                           Foreground="#DDDDDD" 
                           FontFamily="Consolas" 
                           FontSize="12" 
                           TextWrapping="Wrap"
                           Text="Waiting for audio stream..."/>
                </ScrollViewer>

                <!-- Layer 2: AI Response Overlay (Hidden by default) -->
                <Border x:Name="AiResponseOverlay" 
                        Background="#CC000000" 
                        Visibility="Collapsed" 
                        Margin="10" 
                        CornerRadius="5" 
                        BorderBrush="#00FF00" 
                        BorderThickness="1">
                    <Grid>
                        <ScrollViewer VerticalScrollBarVisibility="Hidden" Margin="10">
                            <TextBlock x:Name="AiResponseText" 
                                       Foreground="#00FF00" 
                                       FontFamily="Segoe UI" 
                                       FontSize="14" 
                                       FontWeight="Bold" 
                                       TextWrapping="Wrap"/>
                        </ScrollViewer>
                        <Button Content="Dismiss" 
                                HorizontalAlignment="Right" 
                                VerticalAlignment="Top" 
                                Margin="0,5,5,0" 
                                Width="60" 
                                Height="20" 
                                FontSize="10" 
                                Click="DismissAi_Click"/>
                    </Grid>
                </Border>
            </Grid>

            <!-- Controls -->
            <Grid Grid.Row="2" Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="BtnStart" Grid.Column="0" Content="Initialize &amp; Listen" Click="BtnStart_Click" Background="#00FF00" Foreground="Black" FontWeight="Bold"/>

                <!-- Ingest Button -->
                <Button x:Name="BtnIngest" Grid.Column="1" Content="Upload PDF" Margin="5,0,0,0" Click="BtnIngest_Click" Background="#0088FF" Foreground="White" FontSize="10"/>

                <!-- Debug Button -->
                <Button x:Name="BtnDebug" Grid.Column="2" Content="Rec Debug" Margin="5,0,0,0" Click="BtnDebug_Click" Background="#444444" Foreground="White" FontSize="10"/>
            </Grid>
        </Grid>
    </Border>
</Window>