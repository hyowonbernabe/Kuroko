<Window x:Class="Kuroko.UI.TranscriptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Live Log" Height="400" Width="350"
        Background="Transparent" AllowsTransparency="True" WindowStyle="None"
        Topmost="True" ResizeMode="CanResizeWithGrip">

    <Border Background="#CC111111" BorderBrush="#333" BorderThickness="1" CornerRadius="5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Background="#111" CornerRadius="5,5,0,0" MouseDown="Header_MouseDown">
                <DockPanel LastChildFill="False" Margin="10,0">
                    <TextBlock Text="LIVE TRANSCRIPT" Foreground="#666" FontFamily="Consolas" VerticalAlignment="Center"/>
                    <Button x:Name="BtnDebug" Content="REC DEBUG" DockPanel.Dock="Right" Click="BtnDebug_Click" 
                            Background="Transparent" Foreground="#844" BorderThickness="0" FontFamily="Consolas" FontSize="10"/>
                    <Button Content="CLR" DockPanel.Dock="Right" Click="BtnClear_Click" 
                            Background="Transparent" Foreground="#666" BorderThickness="0" FontFamily="Consolas" FontSize="10" Margin="0,0,5,0"/>
                </DockPanel>
            </Border>

            <ScrollViewer Grid.Row="1" x:Name="LogScroller" Margin="5" VerticalScrollBarVisibility="Hidden">
                <TextBlock x:Name="LogText" Text="Waiting..." Foreground="#AAA" FontFamily="Consolas" FontSize="12" TextWrapping="Wrap"/>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>