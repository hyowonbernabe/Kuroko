<Window x:Class="Kuroko.UI.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Configuration" Height="550" Width="400"
        Background="Transparent" AllowsTransparency="True" WindowStyle="None"
        Topmost="True" ResizeMode="CanResizeWithGrip">

    <Window.Resources>
        <!-- Toggle Switch Style -->
        <Style x:Key="ToggleSwitch" TargetType="CheckBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid Background="Transparent">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <ContentPresenter VerticalAlignment="Center" Content="{TemplateBinding Content}" TextElement.Foreground="#AAA" TextElement.FontFamily="Consolas"/>
                            <Border Grid.Column="1" Width="30" Height="16" CornerRadius="8" Background="#333" Margin="10,0,0,0">
                                <Ellipse x:Name="Dot" Width="12" Height="12" Fill="#666" HorizontalAlignment="Left" Margin="2,0"/>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Dot" Property="HorizontalAlignment" Value="Right"/>
                                <Setter TargetName="Dot" Property="Fill" Value="#00FF41"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Section Header Style -->
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#00FF41"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,15,0,5"/>
        </Style>

        <!-- Dark TextBox Style -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#111"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#333"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="3">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Dark PasswordBox Style -->
        <Style TargetType="PasswordBox">
            <Setter Property="Background" Value="#111"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#333"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="3">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Fixed Dark Editable ComboBox Style -->
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="#111"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#333"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton Name="ToggleButton" 
                                          Grid.Column="2" 
                                          Focusable="false" 
                                          IsChecked="{Binding Path=IsDropDownOpen,Mode=TwoWay,RelativeSource={RelativeSource TemplatedParent}}" 
                                          ClickMode="Press">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border Background="#111" BorderBrush="#333" BorderThickness="1" CornerRadius="3">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="20"/>
                                                </Grid.ColumnDefinitions>
                                                <!-- Clickable area for dropdown -->
                                                <Path Grid.Column="1" Data="M0,0 L4,4 L8,0" Fill="#666" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>

                            <!-- Display for Selection -->
                            <ContentPresenter Name="ContentSite" IsHitTestVisible="False"  Content="{TemplateBinding SelectionBoxItem}"
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                              Margin="5,0,25,0"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Left" />

                            <!-- Editable Input Box -->
                            <TextBox x:Name="PART_EditableTextBox"
                                     Style="{x:Null}"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Center"
                                     Margin="5,0,25,0"
                                     Focusable="True"
                                     Background="Transparent"
                                     Foreground="{TemplateBinding Foreground}"
                                     FontFamily="{TemplateBinding FontFamily}"
                                     Visibility="Hidden"
                                     IsReadOnly="{Binding IsReadOnly, RelativeSource={RelativeSource TemplatedParent}}"/>

                            <!-- Dropdown Popup -->
                            <Popup Name="Popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}" AllowsTransparency="True" Focusable="False" PopupAnimation="Slide">
                                <Grid Name="DropDown" SnapsToDevicePixels="True" MinWidth="{TemplateBinding ActualWidth}" MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border x:Name="DropDownBorder" Background="#222" BorderThickness="1" BorderBrush="#444"/>
                                    <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained" />
                                    </ScrollViewer>
                                </Grid>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEditable" Value="True">
                                <Setter TargetName="ContentSite" Property="Visibility" Value="Hidden"/>
                                <Setter TargetName="PART_EditableTextBox" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Border Background="#CC111111" BorderBrush="#333" BorderThickness="1" CornerRadius="5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Background="#111" CornerRadius="5,5,0,0" MouseDown="Header_MouseDown">
                <DockPanel LastChildFill="False" Margin="10,0">
                    <TextBlock Text="SYSTEM CONFIG" Foreground="#888" FontFamily="Consolas" VerticalAlignment="Center"/>
                    <Button Content="✕" DockPanel.Dock="Right" Click="BtnClose_Click" 
                            Background="Transparent" Foreground="#666" BorderThickness="0"/>
                </DockPanel>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden" Margin="15">
                <StackPanel>

                    <!-- 1. Window Behavior -->
                    <TextBlock Text="WINDOW BEHAVIOR" Style="{StaticResource SectionHeader}" Margin="0,0,0,5"/>
                    <StackPanel Background="#11000000">
                        <CheckBox x:Name="ChkTopMost" Content="Always Top-Most" Style="{StaticResource ToggleSwitch}" IsChecked="True" Click="Setting_Changed" Margin="0,5"/>
                    </StackPanel>

                    <!-- 2. Intelligence -->
                    <TextBlock Text="INTELLIGENCE (OPENROUTER)" Style="{StaticResource SectionHeader}"/>

                    <TextBlock Text="API Key" Foreground="#666" FontFamily="Consolas" FontSize="10"/>
                    <PasswordBox x:Name="TxtApiKey" Margin="0,0,0,5"/>

                    <TextBlock Text="Model ID" Foreground="#666" FontFamily="Consolas" FontSize="10"/>
                    <ComboBox x:Name="CmbModel" IsEditable="True" Margin="0,0,0,5">
                        <ComboBoxItem Content="google/gemini-2.0-flash-exp:free"/>
                        <ComboBoxItem Content="google/gemma-3-27b-it:free"/>
                        <ComboBoxItem Content="mistralai/devstral-2512:free"/>
                    </ComboBox>
                    <Button Content="SAVE AI SETTINGS" Click="BtnSaveAi_Click" Background="#222" Foreground="#DDD" BorderBrush="#444" Padding="5" Margin="0,5,0,0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" CornerRadius="3">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <!-- 3. Hotkeys -->
                    <TextBlock Text="CONTROLS" Style="{StaticResource SectionHeader}"/>
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Trigger AI" Foreground="#666" FontSize="10" FontFamily="Consolas"/>
                            <TextBox x:Name="TxtHotkeyTrigger" Text="Alt + S" IsReadOnly="True" PreviewKeyDown="Hotkeybox_KeyDown" Tag="Trigger"/>
                        </StackPanel>
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Panic (Exit)" Foreground="#666" FontSize="10" FontFamily="Consolas"/>
                            <TextBox x:Name="TxtHotkeyPanic" Text="Alt + Q" IsReadOnly="True" PreviewKeyDown="Hotkeybox_KeyDown" Tag="Panic"/>
                        </StackPanel>
                    </Grid>

                    <!-- 4. Memory (RAG) -->
                    <TextBlock Text="KNOWLEDGE BASE" Style="{StaticResource SectionHeader}"/>
                    <Border BorderBrush="#333" BorderThickness="1" Background="#080808" CornerRadius="3" MinHeight="100">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- File List -->
                            <ItemsControl x:Name="LstFiles" Margin="5">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <DockPanel Margin="0,2">
                                            <Button Content="✕" DockPanel.Dock="Right" 
                                                    Click="BtnDeleteFile_Click" Tag="{Binding}"
                                                    Background="Transparent" Foreground="#D44" BorderThickness="0" FontSize="10" Padding="5,0"/>
                                            <TextBlock Text="{Binding}" Foreground="#CCC" FontFamily="Consolas" FontSize="11" VerticalAlignment="Center"/>
                                        </DockPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- RAG Actions -->
                            <Grid Grid.Row="1" Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Button Content="UPLOAD PDF" Click="BtnIngest_Click" Background="#222" Foreground="#DDD" BorderBrush="#444" Padding="5">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" CornerRadius="3">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                                <Button x:Name="BtnWipe" Content="WIPE DB" Grid.Column="1" Click="BtnWipe_Click" Background="#311" Foreground="#E88" BorderBrush="#522" Margin="5,0,0,0" Padding="5">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" CornerRadius="3">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </Grid>
                        </Grid>
                    </Border>

                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>