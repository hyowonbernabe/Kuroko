<Window x:Class="Kuroko.UI.OutputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AI Output" Width="450"
        SizeToContent="Height"
        MinHeight="100"
        MaxHeight="800"
        Background="Transparent" AllowsTransparency="True" WindowStyle="None"
        Topmost="True" ResizeMode="CanResizeWithGrip">

    <Border Background="#CC111111" BorderBrush="#333" BorderThickness="1" CornerRadius="5" VerticalAlignment="Top">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Background="#111" CornerRadius="5,5,0,0" MouseDown="Header_MouseDown">
                <DockPanel LastChildFill="False" Margin="10,0">
                    <TextBlock Text="AI INSIGHT" Foreground="#00FF41" FontFamily="Consolas" FontWeight="Bold" VerticalAlignment="Center"/>

                    <Button Content="✕" DockPanel.Dock="Right" Click="BtnClose_Click" 
                            Background="Transparent" Foreground="#666" BorderThickness="0" Padding="5,0"/>
                </DockPanel>
            </Border>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden" Margin="10">
                <StackPanel x:Name="MarkdownContainer"/>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>